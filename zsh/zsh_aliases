# ls
alias ls='exa -g --git --group-directories-first --color=auto'
alias la='ls -a'
alias ll='ls -l'
alias lla='ll -la'

# grep
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'

# nvim aliases
alias vi='nvim'
alias vim='nvim'
alias sudo='sudo '
alias q='exit'

# pacman
alias i='sudo pacman -S'
alias r='sudo pacman -Rns'
alias u='sudo pacman -Syu'  # sync database and update
alias s='sudo pacman -Ss'
alias pl='pacman -Qq'       # list installed packages
alias pll='pacman -Qi'      # list installed packages with details
alias yl='pacman -Qm'       # list foreign packages
alias yll='pacman -Qmi'     # list foreign packages with details

# yay
alias yi='yay -S'
alias yr='yay -Rns'
alias yc='yay -Yc'     # uninstall unneeded packages
alias pc='yay -Scc'    # clean packages cache
alias yu='yay'         # sync database and update both pacman and yay packages
alias ys='yay -Ss'

# tmux
alias ta='tmux attach'
alias tas='tmux attach-session -t '
alias tk='tmux kill-server'

# config
alias vdot='cd ~/.dotfiles/; nvim .'
alias vvim='cd ~/.dotfiles/nvim; nvim .'
alias vlf='cd ~/.dotfiles/lf; nvim .'
alias vscr='cd ~/.scripts/; nvim .'

# misc
alias lg='lazygit'
alias zr='exec zsh'
alias rmdir='rm -rf'
alias mkdir='mkdir -p'
alias free='free -h'
alias df='df -h'
alias cls='clear'
