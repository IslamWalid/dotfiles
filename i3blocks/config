[memory]
label=💾 
command=free -h | grep Mem | awk '{print $3}'
interval=1

[separator]

[brightness]
command=$HOME/.scripts/brightness_info.sh
interval=once
signal=1

[separator]

[mic]
command=$HOME/.scripts/mic_info.sh
interval=once
signal=2

[separator]

[volume]
command=$HOME/.scripts/volume_info.sh
interval=once
signal=3

[separator]

[date]
