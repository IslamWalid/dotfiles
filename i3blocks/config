# Global properties
full_text=" "
color=#FFFFFFFF
separator=false
separator_block_width=4

[memory]
label=💾
command=printf " %.1f%%\n" "$(free | grep Mem | awk '{print $3/$2 * 100.0}')"
interval=1

[separator]

[mic]
command=$HOME/.scripts/mic_info.sh
interval=once
signal=10

[separator]

[volume]
command=$HOME/.scripts/volume_info.sh
interval=once
signal=10

[separator]

