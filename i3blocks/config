[separator]

[time]
label=🕒 
command=date '+%I:%M %p'
interval=1

[separator]

[language]
command=$HOME/.scripts/language_info.sh
interval=once
signal=4

[separator]

[internet]
command=$HOME/.scripts/internet_info.sh
